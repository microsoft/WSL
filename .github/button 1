<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Reserve Button - Enhanced Glow</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .reserve-button {
      position: relative;
      display: inline-block;
      width: 240px;
      overflow: hidden;
      border-radius: 0.5rem;
      transform-origin: center;
      background-color: #16a34a; /* green-600 */
      transition: transform 0.3s ease;
    }

    .reserve-button:hover {
      transform: scale(1.07);
    }

    .glow {
      position: absolute;
      width: 200px;
      height: 200px;
      pointer-events: none;
      border-radius: 9999px;
      background: radial-gradient(circle at center,
        rgba(230, 255, 100, 0.9) 0%,
        rgba(100, 255, 100, 0.5) 40%,
        transparent 75%);
      transform: translate(-50%, -50%) scale(1);
      opacity: 0;
      transition:
        transform 0.4s ease-out,
        opacity 0.4s ease;
      z-index: 1;
      mix-blend-mode: screen;
      filter: blur(20px) brightness(1.2);
    }

    .btn-content {
      position: relative;
      z-index: 2;
    }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen bg-gray-100">

  <button
    id="reserveButton"
    class="reserve-button text-white font-semibold py-3 px-8 shadow-xl transition-all duration-300 ease-in-out"
  >
    <div class="glow" id="glow"></div>
    <span class="btn-content">Reserve</span>
  </button>

  <script>
    const glow = document.getElementById('glow');
    const button = document.getElementById('reserveButton');

    button.addEventListener('mousemove', (e) => {
      const rect = button.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      glow.style.transform = `translate(${x}px, ${y}px) scale(1.3)`;
      glow.style.opacity = 1;
    });

    button.addEventListener('mouseleave', () => {
      glow.style.opacity = 0;
      glow.style.transform = `translate(-50%, -50%) scale(1)`;
    });
  </script>

</body>
</html>
